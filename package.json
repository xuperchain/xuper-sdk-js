{
    "name": "@xuperchain/xuper-sdk",
    "version": "1.1.1",
    "description": "A simple JS(TS) SDK for XuperOS",
    "main": "lib/index.js",
    "types": "lib/index.d.js",
    "scripts": {
        "build": "./node_modules/.bin/webpack --colors --progress --config ./scripts/webpack.prod.js",
        "docs": "typedoc --mode file --out docs src",
        "lint": "eslint src/*.ts",
        "lint:fix": "eslint src/*.ts --fix",
        "test": "jest",
        "commit": "git-cz",
        "prerelease": "./node_modules/.bin/webpack --colors --progress --config ./scripts/webpack.prod.js",
        "release": "standard-version -a"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xuperchain/xuper-sdk-js.git"
    },
    "keywords": [
        "xuper",
        "blockchain",
        "xuper-sdk",
        "xuper-account",
        "xuper-lcv"
    ],
    "author": "xinyi",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/xuperchain/xuper-sdk-js/issues"
    },
    "homepage": "https://github.com/xuperchain/xuper-sdk-js#readme",
    "devDependencies": {
        "@types/jest": "^24.0.24",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "clean-webpack-plugin": "^3.0.0",
        "coveralls": "^3.0.9",
        "cz-conventional-changelog": "^3.0.2",
        "dotenv": "^8.2.0",
        "eslint": "^6.7.2",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.19.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "jest-environment-jsdom-fourteen": "^1.0.1",
        "standard-version": "^7.0.1",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.2.1",
        "typedoc": "^0.15.5",
        "typescript": "^3.7.3",
        "webpack": "^4.41.4",
        "webpack-cli": "^3.3.10",
        "webpack-merge": "^4.2.2",
        "whatwg-fetch": "^3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint:fix && npm run docs && git add docs/"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@types/bn.js": "^4.11.5",
        "@types/elliptic": "^6.4.10",
        "@types/pbkdf2": "^3.0.0",
        "@types/sha256": "^0.2.0",
        "bn.js": "^5.0.0",
        "elliptic": "^6.5.2",
        "pbkdf2": "^3.0.17",
        "ripemd160-min": "0.0.6",
        "sha256": "^0.2.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
